<div class="container mt-3">

  <div class="row">
    <div class="col-12">
      <h1>All our Flats</h1>
    </div>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="d-flex align-items-stretch col-sm-12 col-md-6 col-lg-4">
        <div class="card mb-4">
          <img src="//placehold.it/500x200" class="card-img-top" alt="...">
          <div class="card-body d-flex flex-column justify-content-between">
            <div class="d-flex flex-column justify-content-between">
              <h5 class="card-title"><%= flat.name %></h5>
              <p class="card-text"><%= flat.address %></p>
            </div>

            <!-- <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p> -->
            <div class="d-flex flex-column justify-content-between mt-2">
              <div class="d-flex text-muted">
                <div class="flex">
                  <i class="fas fa-user-friends"> </i> <%= flat.number_of_guests %>
                </div>
                <div class="flex ml-3">
                  <i class="fas fa-euro-sign"> </i> <%= flat.price_per_night %>
                </div>
              </div>

              <div class="d-flex justify-content-between mt-2">
                <%= link_to "More info", flat_path(flat), class: "btn btn-primary" %>
                <%= link_to "Edit", edit_flat_path(flat.id), class: "btn btn-warning" %>
                <%= link_to "Remove", flat_path(flat), method: :delete,data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>

