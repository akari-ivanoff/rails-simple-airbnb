<div class="banner"
  style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(//placehold.it/1200x500);">
</div>
<div class="container" style="margin-top: -75px;">
  <div class="row">
    <div class="col-12 col-md-8">
      <%# <div class="col-12 d-flex flex-row justify-content-between align-items-center">
          <h1>Flat details</h1>
          <%= link_to "Back to the list", flats_path, class: "btn btn-secondary" %>
      <%# </div> %>
      <div class="card mb-3">
        <div class="card-body">
          <h2 class="card-title"><%= @flat.name %></h2>
          <p class="card-text"><%= @flat.address %></p>
        </div>
      </div>
      <div class="card mb-3 h-100">
        <div class="card-body">
          <h5 class="card-title">A bit more about this flat...</h5>
          <p class="card-text"><%= @flat.description %></p>
        </div>
      </div>
    </div>
    <div class="col-12 col-md-4">
      <div class="card mb-3">
        <div class="card-body">
          <h5>Book this place!</h5>
          <form action="">
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">From:</span>
              </div>
              <input type="text" class="form-control" placeholder="05/06/2019" aria-describedby="basic-addon1">
            </div>
            <div class="input-group mb-2">
              <div class="input-group-prepend">
                <span class="input-group-text" id="basic-addon1">To:</span>
              </div>
              <input type="text" class="form-control" placeholder="05/07/2019" aria-describedby="basic-addon1">
            </div>
            <input type="submit" value="Book" class="btn btn-success mt-2" style="width: 100%">
          </form>
        </div>
      </div>
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Details</h5>
          <div class="d-flex mb-3">
            <div class="flex">
              <i class="fas fa-user-friends"> </i> <%= @flat.number_of_guests %>
            </div>
            <div class="flex ml-3">
              <i class="fas fa-euro-sign"> </i> <%= @flat.price_per_night %>
            </div>
          </div>
          <div class="d-flex justify-content-between">
            <%= link_to "Edit", edit_flat_path(@flat.id), class: "btn btn-warning w-100 mr-3" %>
            <%= link_to "Remove", flat_path(@flat), method: :delete,data: { confirm: "Are you sure?" }, class: "btn btn-danger w-100" %>
          </div>
        </div>
      </div>
      <div class="card mb-3">
        <div class="card-body">
          <%= link_to "Back to the list", flats_path, class: "btn btn-secondary w-100" %>
        </div>
      </div>
    </div>
  </div>
</div>